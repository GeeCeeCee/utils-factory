{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "composite": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
